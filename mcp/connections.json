      "google": {
        "name": "Google Services",
        "description": "Google Analytics, Sheets, Ads API",
        "type": "package",
        "package": "@anthropic/google-mcp-server",
        "auth": {
          "type": "oauth2",
          "credentials_env": "GOOGLE_SERVICE_ACCOUNT_JSON",
          "scopes": [
            "https://www.googleapis.com/auth/analytics.readonly",
            "https://www.googleapis.com/auth/spreadsheets",
            "https://www.googleapis.com/auth/adwords"
          ]
        },
        "services": {
          "analytics": {
            "base_url": "https://analyticsdata.googleapis.com/v1beta",
            "tools": [
              {
                "name": "run_report",
                "description": "GA4 리포트 실행",
                "endpoint": "/properties/{propertyId}:runReport"
              },
              {
                "name": "get_realtime_report",
