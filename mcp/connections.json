    "utilities": {
      "openai": {
        "name": "OpenAI",
        "description": "이미지 생성 (DALL-E) 및 보조 AI 기능",
        "type": "custom",
        "base_url": "https://api.openai.com/v1",
        "auth": {
          "type": "bearer",
          "token_env": "OPENAI_API_KEY"
        },
        "tools": [
          {
            "name": "generate_image",
            "description": "DALL-E 이미지 생성",
            "endpoint": "/images/generations",
            "config": {
              "model": "dall-e-3",
              "size": "1024x1024",
              "quality": "standard"
            }
          },
          {
            "name": "edit_image",
            "description": "이미지 편집",
            "endpoint": "/images/edits"
          },
          {
            "name": "create_variation",
            "description": "이미지 변형 생성",
            "endpoint": "/images/variations"
          },
          {
            "name": "text_to_speech",
            "description": "텍스트 음성 변환",
            "endpoint": "/audio/speech"
          },
          {
            "name": "transcribe_audio",
            "description": "음성 텍스트 변환",
            "endpoint": "/audio/transcriptions"
          }
        ],
        "rate_limit": {
          "requests_per_minute": 50,
          "images_per_minute": 5
        },
        "agents": ["marketing-agent", "cs-agent"],
        "config": {
          "default_image_model": "dall-e-3",
          "default_image_size": "1024x1024"
        }
      },
      "delivery": {
        "name": "Delivery Tracking",
        "description": "택배사 배송 조회 및 관리 API",
        "type": "custom",
        "providers": {
          "cj": {
            "name": "CJ대한통운",
            "base_url": "https://www.cjlogistics.com/ko/tool/parcel",
            "api_url": "https://api.cjlogistics.com/v1",
            "auth": {
              "type": "bearer",
              "token_env": "CJ_LOGISTICS_API_KEY"
            },
            "carrier_code": "CJ"
          },
          "lotte": {
            "name": "롯데택배",
            "base_url": "https://www.lotteglogis.com",
            "api_url": "https://api.lotteglogis.com/v1",
            "auth": {
              "type": "bearer",
              "token_env": "LOTTE_LOGISTICS_API_KEY"
            },
            "carrier_code": "LOTTE"
          },
          "hanjin": {
            "name": "한진택배",
            "base_url": "https://www.hanjin.com",
            "api_url": "https://api.hanjin.com/v1",
            "auth": {
              "type": "bearer",
              "token_env": "HANJIN_API_KEY"
            },
            "carrier_code": "HANJIN"
          },
          "logen": {
            "name": "로젠택배",
            "base_url": "https://www.ilogen.com",
            "api_url": "https://api.ilogen.com/v1",
            "auth": {
              "type": "bearer",
              "token_env": "LOGEN_API_KEY"
            },
            "carrier_code": "LOGEN"
          },
          "epost": {
            "name": "우체국택배",
            "base_url": "https://www.epost.go.kr",
            "api_url": "https://api.epost.go.kr/v1",
            "auth": {
              "type": "bearer",
              "token_env": "EPOST_API_KEY"
            },
            "carrier_code": "EPOST"
          }
        },
        "tools": [
          {
            "name": "track_shipment",
            "description": "배송 조회",
            "params": ["carrier_code", "tracking_number"]
          },
          {
            "name": "register_shipment",
            "description": "배송 등록",
            "params": ["carrier_code", "sender", "receiver", "items"]
          },
          {
            "name": "get_shipping_rates",
            "description": "배송비 조회",
            "params": ["carrier_code", "origin", "destination", "weight"]
          },
          {
            "name": "schedule_pickup",
            "description": "픽업 예약",
            "params": ["carrier_code", "pickup_address", "pickup_date"]
          },
          {
            "name": "cancel_shipment",
            "description": "배송 취소",
            "params": ["carrier_code", "tracking_number"]
          },
          {
            "name": "get_delivery_estimate",
            "description": "예상 배송일 조회",
            "params": ["carrier_code", "origin", "destination"]
          }
        ],
        "unified_tracking": {
          "enabled": true,
          "fallback_service": "sweet_tracker",
          "sweet_tracker_api_key_env": "SWEET_TRACKER_API_KEY"
        },
        "rate_limit": {
          "requests_per_minute": 100
        },
        "agents": ["order-agent", "cs-agent"],
        "config": {
          "default_carrier": "CJ",
          "auto_detect_carrier": true,
          "webhook_url": "${DELIVERY_WEBHOOK_URL}"
        }
      }
    }
