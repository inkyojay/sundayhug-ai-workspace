        "rate_limit": {
          "analytics": {
            "requests_per_day": 50000,
            "requests_per_minute": 600
          },
          "sheets": {
            "requests_per_minute": 60,
            "requests_per_user_per_100_seconds": 100
          },
          "ads": {
            "requests_per_day": 15000
          }
        },
        "agents": ["analytics-agent", "marketing-agent"],
        "config": {
          "analytics_property_id": "${GA4_PROPERTY_ID}",
          "ads_customer_id": "${GOOGLE_ADS_CUSTOMER_ID}",
          "spreadsheets": {
            "sales_report": "${GOOGLE_SHEET_SALES_ID}",
            "inventory": "${GOOGLE_SHEET_INVENTORY_ID}",
            "marketing": "${GOOGLE_SHEET_MARKETING_ID}"
          }
        }
