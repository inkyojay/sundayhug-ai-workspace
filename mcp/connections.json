{
  "$schema": "https://modelcontextprotocol.io/schema/connections.json",
  "version": "1.0.0",
  "name": "sundayhug-ai-agent-mcp",
  "description": "썬데이허그 AI 에이전트 시스템 MCP 연결 설정",
  "connections": {
    "core": {
      "supabase": {
        "name": "Supabase",
        "description": "PostgreSQL 데이터베이스 및 실시간 구독, 인증 서비스",
        "type": "package",
        "package": "@supabase/mcp-server",
        "base_url": "${SUPABASE_URL}",
        "auth": {
          "type": "bearer",
          "token_env": "SUPABASE_SERVICE_ROLE_KEY"
        },
        "tools": [
          {
            "name": "query",
            "description": "SQL 쿼리 실행"
          },
          {
            "name": "insert",
            "description": "데이터 삽입"
          },
          {
            "name": "update",
            "description": "데이터 업데이트"
          },
          {
            "name": "delete",
            "description": "데이터 삭제"
          },
          {
            "name": "rpc",
            "description": "저장 프로시저 호출"
          },
          {
            "name": "realtime_subscribe",
            "description": "실시간 변경 구독"
          }
        ],
        "rate_limit": {
          "requests_per_second": 100,
          "burst": 200
        },
        "agents": ["order-agent", "cs-agent", "analytics-agent", "marketing-agent", "inventory-agent"]
      },
      "notion": {
        "name": "Notion",
        "description": "문서 관리, 지식베이스, 작업 관리",
        "type": "package",
        "package": "@notionhq/mcp-server",
        "base_url": "https://api.notion.com/v1",
        "auth": {
          "type": "bearer",
          "token_env": "NOTION_API_KEY"
        },
        "tools": [
          {
            "name": "search",
            "description": "페이지 및 데이터베이스 검색"
          },
          {
            "name": "get_page",
            "description": "페이지 내용 조회"
          },
          {
            "name": "create_page",
            "description": "새 페이지 생성"
          },
          {
            "name": "update_page",
            "description": "페이지 업데이트"
          },
          {
            "name": "query_database",
            "description": "데이터베이스 쿼리"
          },
          {
            "name": "append_block",
            "description": "블록 추가"
          }
        ],
        "rate_limit": {
          "requests_per_second": 3,
          "burst": 10
        },
        "agents": ["cs-agent", "analytics-agent", "marketing-agent"],
        "config": {
          "databases": {
            "knowledge_base": "${NOTION_KNOWLEDGE_BASE_ID}",
            "faq": "${NOTION_FAQ_DATABASE_ID}",
            "product_info": "${NOTION_PRODUCT_INFO_ID}"
          }
        }
      },
      "slack": {
        "name": "Slack",
        "description": "팀 알림 및 내부 커뮤니케이션",
        "type": "package",
        "package": "@slack/mcp-server",
        "base_url": "https://slack.com/api",
        "auth": {
          "type": "oauth2",
          "token_env": "SLACK_BOT_TOKEN",
          "scopes": ["chat:write", "channels:read", "users:read", "files:write"]
        },
        "tools": [
          {
            "name": "send_message",
            "description": "메시지 전송"
          },
          {
            "name": "upload_file",
            "description": "파일 업로드"
          },
          {
            "name": "get_channel_history",
            "description": "채널 히스토리 조회"
          },
          {
            "name": "add_reaction",
            "description": "리액션 추가"
          }
        ],
        "rate_limit": {
          "requests_per_minute": 50,
          "burst": 20
        },
        "agents": ["order-agent", "cs-agent", "analytics-agent", "marketing-agent", "inventory-agent"],
        "config": {
          "channels": {
            "orders": "${SLACK_ORDERS_CHANNEL}",
            "cs_alerts": "${SLACK_CS_CHANNEL}",
            "marketing": "${SLACK_MARKETING_CHANNEL}",
            "inventory": "${SLACK_INVENTORY_CHANNEL}",
            "general": "${SLACK_GENERAL_CHANNEL}"
          }
        }
      },
      "kakao": {
        "name": "Kakao",
        "description": "카카오 알림톡/친구톡 발송",
        "type": "custom",
        "base_url": "https://kapi.kakao.com",
        "auth": {
          "type": "bearer",
          "token_env": "KAKAO_API_KEY"
        },
        "tools": [
          {
            "name": "send_alimtalk",
            "description": "알림톡 발송"
          },
          {
            "name": "send_friendtalk",
            "description": "친구톡 발송"
          },
          {
            "name": "get_template_list",
            "description": "템플릿 목록 조회"
          },
          {
            "name": "get_send_result",
            "description": "발송 결과 조회"
          }
        ],
        "rate_limit": {
          "requests_per_second": 100,
          "daily_limit": 100000
        },
        "agents": ["order-agent", "cs-agent", "marketing-agent"],
        "config": {
          "sender_key": "${KAKAO_SENDER_KEY}",
          "templates": {
            "order_confirm": "ORDER_CONFIRM_001",
            "shipping_start": "SHIPPING_START_001",
            "delivery_complete": "DELIVERY_COMPLETE_001",
            "cs_response": "CS_RESPONSE_001"
          }
        }
      }
    },
    "ecommerce": {
      "coupang": {
        "name": "Coupang Wing",
        "description": "쿠팡 오픈마켓 API - 주문, 상품, Q&A, 리뷰 관리",
        "type": "custom",
        "base_url": "https://api-gateway.coupang.com",
        "auth": {
          "type": "hmac",
          "access_key_env": "COUPANG_ACCESS_KEY",
          "secret_key_env": "COUPANG_SECRET_KEY",
          "algorithm": "HmacSHA256"
        },
        "tools": [
          {
            "name": "get_orders",
            "description": "주문 목록 조회",
            "endpoint": "/v2/providers/openapi/apis/api/v4/vendors/{vendorId}/ordersheets"
          },
          {
            "name": "get_order_detail",
            "description": "주문 상세 조회",
            "endpoint": "/v2/providers/openapi/apis/api/v4/vendors/{vendorId}/ordersheets/{shipmentBoxId}"
          },
          {
            "name": "confirm_order",
            "description": "주문 확인 처리",
            "endpoint": "/v2/providers/openapi/apis/api/v4/vendors/{vendorId}/ordersheets/acknowledgement"
          },
          {
            "name": "ship_order",
            "description": "발송 처리",
            "endpoint": "/v2/providers/openapi/apis/api/v4/vendors/{vendorId}/ordersheets/invoices"
          },
          {
            "name": "get_products",
            "description": "상품 목록 조회",
            "endpoint": "/v2/providers/seller_api/apis/api/v1/marketplace/seller-products"
          },
          {
            "name": "update_product",
            "description": "상품 정보 수정",
            "endpoint": "/v2/providers/seller_api/apis/api/v1/marketplace/seller-products"
          },
          {
            "name": "update_inventory",
            "description": "재고 수량 수정",
            "endpoint": "/v2/providers/seller_api/apis/api/v1/marketplace/seller-products/{sellerProductId}/items/{itemId}/quantities/{quantityType}"
          },
          {
            "name": "get_qna_list",
            "description": "고객 Q&A 목록 조회",
            "endpoint": "/v2/providers/openapi/apis/api/v4/vendors/{vendorId}/product-qnas"
          },
          {
            "name": "answer_qna",
            "description": "Q&A 답변 등록",
            "endpoint": "/v2/providers/openapi/apis/api/v4/vendors/{vendorId}/product-qnas/{inquiryId}/reply"
          },
          {
            "name": "get_reviews",
            "description": "상품 리뷰 조회",
            "endpoint": "/v2/providers/openapi/apis/api/v4/vendors/{vendorId}/product-reviews"
          },
          {
            "name": "get_return_requests",
            "description": "반품 요청 조회",
            "endpoint": "/v2/providers/openapi/apis/api/v4/vendors/{vendorId}/returns"
          },
          {
            "name": "process_return",
            "description": "반품 처리",
            "endpoint": "/v2/providers/openapi/apis/api/v4/vendors/{vendorId}/returns/{receiptId}"
          }
        ],
        "rate_limit": {
          "requests_per_minute": 60,
          "daily_limit": 10000
        },
        "agents": ["order-agent", "cs-agent", "inventory-agent"],
        "config": {
          "vendor_id": "${COUPANG_VENDOR_ID}",
          "webhook_url": "${COUPANG_WEBHOOK_URL}"
        }
      },
      "naver": {
        "name": "Naver Commerce",
        "description": "네이버 스마트스토어 API - 주문, 상품, 톡톡 관리",
        "type": "custom",
        "base_url": "https://api.commerce.naver.com",
        "auth": {
          "type": "oauth2",
          "client_id_env": "NAVER_CLIENT_ID",
          "client_secret_env": "NAVER_CLIENT_SECRET",
          "token_url": "https://api.commerce.naver.com/external/v1/oauth2/token",
          "grant_type": "client_credentials"
        },
        "tools": [
          {
            "name": "get_orders",
            "description": "주문 목록 조회",
            "endpoint": "/external/v1/pay-order/seller/orders"
          },
          {
            "name": "get_order_detail",
            "description": "주문 상세 조회",
            "endpoint": "/external/v1/pay-order/seller/orders/{orderId}"
          },
          {
            "name": "confirm_order",
            "description": "발주 확인",
            "endpoint": "/external/v1/pay-order/seller/orders/{orderId}/claim/confirm"
          },
          {
            "name": "ship_order",
            "description": "발송 처리",
            "endpoint": "/external/v1/pay-order/seller/orders/{orderId}/ship"
          },
          {
            "name": "get_products",
            "description": "상품 목록 조회",
            "endpoint": "/external/v2/products"
          },
          {
            "name": "get_product_detail",
            "description": "상품 상세 조회",
            "endpoint": "/external/v2/products/{productNo}"
          },
          {
            "name": "update_product",
            "description": "상품 정보 수정",
            "endpoint": "/external/v2/products/{productNo}"
          },
          {
            "name": "update_inventory",
            "description": "재고 수량 수정",
            "endpoint": "/external/v2/products/{productNo}/options/stock"
          },
          {
            "name": "get_talktalk_messages",
            "description": "톡톡 메시지 조회",
            "endpoint": "/external/v1/pay-chat/seller/rooms"
          },
          {
            "name": "send_talktalk_message",
            "description": "톡톡 메시지 발송",
            "endpoint": "/external/v1/pay-chat/seller/rooms/{roomId}/messages"
          },
          {
            "name": "get_qna_list",
            "description": "상품 문의 조회",
            "endpoint": "/external/v1/contents/qnas"
          },
          {
            "name": "answer_qna",
            "description": "상품 문의 답변",
            "endpoint": "/external/v1/contents/qnas/{qnaId}/answer"
          },
          {
            "name": "get_reviews",
            "description": "상품 리뷰 조회",
            "endpoint": "/external/v1/contents/reviews"
          },
          {
            "name": "get_claims",
            "description": "클레임(취소/반품/교환) 조회",
            "endpoint": "/external/v1/pay-order/seller/claims"
          },
          {
            "name": "process_claim",
            "description": "클레임 처리",
            "endpoint": "/external/v1/pay-order/seller/claims/{claimId}"
          }
        ],
        "rate_limit": {
          "requests_per_second": 10,
          "daily_limit": 50000
        },
        "agents": ["order-agent", "cs-agent", "inventory-agent"],
        "config": {
          "account_id": "${NAVER_ACCOUNT_ID}",
          "channel_id": "${NAVER_CHANNEL_ID}",
          "webhook_url": "${NAVER_WEBHOOK_URL}"
        }
      },
      "cafe24": {
        "name": "Cafe24",
        "description": "Cafe24 자사몰 API - 주문, 상품, 고객 관리",
        "type": "custom",
        "base_url": "https://${CAFE24_MALL_ID}.cafe24api.com/api/v2",
        "auth": {
          "type": "oauth2",
          "client_id_env": "CAFE24_CLIENT_ID",
          "client_secret_env": "CAFE24_CLIENT_SECRET",
          "token_url": "https://${CAFE24_MALL_ID}.cafe24api.com/api/v2/oauth/token",
          "grant_type": "authorization_code",
          "refresh_enabled": true
        },
        "tools": [
          {
            "name": "get_orders",
            "description": "주문 목록 조회",
            "endpoint": "/admin/orders"
          },
          {
            "name": "get_order_detail",
            "description": "주문 상세 조회",
            "endpoint": "/admin/orders/{orderId}"
          },
          {
            "name": "update_order_status",
            "description": "주문 상태 변경",
            "endpoint": "/admin/orders/{orderId}"
          },
          {
            "name": "get_products",
            "description": "상품 목록 조회",
            "endpoint": "/admin/products"
          },
          {
            "name": "get_product_detail",
            "description": "상품 상세 조회",
            "endpoint": "/admin/products/{productNo}"
          },
          {
            "name": "update_product",
            "description": "상품 정보 수정",
            "endpoint": "/admin/products/{productNo}"
          },
          {
            "name": "update_inventory",
            "description": "재고 수량 수정",
            "endpoint": "/admin/products/{productNo}/variants/{variantCode}/inventories"
          },
          {
            "name": "get_customers",
            "description": "고객 목록 조회",
            "endpoint": "/admin/customers"
          },
          {
            "name": "get_customer_detail",
            "description": "고객 상세 조회",
            "endpoint": "/admin/customers/{memberId}"
          },
          {
            "name": "get_customer_orders",
            "description": "고객 주문 이력 조회",
            "endpoint": "/admin/customers/{memberId}/orders"
          },
          {
            "name": "get_boards",
            "description": "게시판 목록 조회",
            "endpoint": "/admin/boards"
          },
          {
            "name": "get_board_articles",
            "description": "게시글 목록 조회",
            "endpoint": "/admin/boards/{boardNo}/articles"
          },
          {
            "name": "create_board_reply",
            "description": "게시글 답변 등록",
            "endpoint": "/admin/boards/{boardNo}/articles/{articleNo}/comments"
          },
          {
            "name": "get_claims",
            "description": "클레임 목록 조회",
            "endpoint": "/admin/cancellation"
          },
          {
            "name": "process_refund",
            "description": "환불 처리",
            "endpoint": "/admin/orders/{orderId}/refund"
          }
        ],
        "rate_limit": {
          "requests_per_second": 5,
          "daily_limit": 30000,
          "leaky_bucket": true
        },
        "agents": ["order-agent", "cs-agent", "inventory-agent"],
        "config": {
          "mall_id": "${CAFE24_MALL_ID}",
          "shop_no": 1,
          "webhook_url": "${CAFE24_WEBHOOK_URL}"
        }
      }
    },
    "marketing": {
