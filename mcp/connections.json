              },
              {
                "name": "get_values",
                "description": "셀 값 조회",
                "endpoint": "/spreadsheets/{spreadsheetId}/values/{range}"
              },
              {
                "name": "update_values",
                "description": "셀 값 업데이트",
                "endpoint": "/spreadsheets/{spreadsheetId}/values/{range}"
              },
              {
                "name": "append_values",
