          "ads": {
            "base_url": "https://googleads.googleapis.com/v14",
            "tools": [
              {
                "name": "search_campaigns",
                "description": "캠페인 검색",
                "endpoint": "/customers/{customerId}/googleAds:search"
              },
              {
                "name": "get_campaign_metrics",
